{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "space-in-parens": [
      1,
      "always",
      {
        "exceptions": [
          // "()",
          // "[]",
          // "{}",
          "empty"
        ]
      }
    ],
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": [
      "off"
    ],
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}